{
  "env": {
    "browser": false,
    "node": true,
    "es6": true
  },
  "parserOptions": {
    "ecmaVersion": 8
  },
  "rules": {
    "array-bracket-spacing": [2, "never"],
    "block-scoped-var": 2,
    "brace-style": [2, "1tbs", { "allowSingleLine": true }],
    "camelcase": 0,
    "comma-spacing": 1,
    "computed-property-spacing": [2, "never"],
    "consistent-return": 0,
    "curly": 2,
    "eol-last": 2,
    "eqeqeq": [2, "smart"],
    "indent": [1, 2],
    "keyword-spacing": [2, {"before": true, "after": true}],
    "max-depth": [1, 3],
    "max-len": [1, 240],
    "max-params": [1, 4],
    "max-statements": [1, 25],
    "new-cap": 1,
    "no-extend-native": 2,
    "no-mixed-spaces-and-tabs": 1,
    "no-multi-spaces": 1,
    "no-process-exit": 0,
    "no-trailing-spaces": 1,
    "no-use-before-define": [2, "nofunc"],
    "no-underscore-dangle": 0,
    "no-unused-vars": 1,
    "object-curly-spacing": [1, "always"],
    "quotes": [1, "single"],
    "semi": [1, "always"],
    "semi-spacing": 1,
    "space-unary-ops": 1,
    "strict": [2, "global"],
    "yoda": [1, "never"]
  }
}
